<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Telegram</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <script src="jquery.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" type="text/css" href="layout.css" />
    <link rel="stylesheet" type="text/css" href="login.css" />
    <link rel="stylesheet" type="text/css" href="styles.css" />
    <style>

    </style>
  </head>
  <body>

  <div id="wrapper">
    <!--Start_Login-->
    <div id="loginForm">
      <div class="container">
          <div class="row">
              <div class="col-lg-3 col-md-2"></div>
              <div class="col-lg-6 col-md-8 login-box">
                  <div class="col-lg-12 login-key">
                      <i class="fa fa-key" aria-hidden="true"></i>
                  </div>
                  <div class="col-lg-12 login-title">
                    TELEGRAM
                  </div>

                  <div class="col-lg-12 login-form">
                      <div class="col-lg-12 login-form">
                          <form>
                              <div class="form-group">
                                  <label class="form-control-label">USERNAME</label>
                                  <input type="text" id="username" class="form-control">
                              </div>
                              <div class="col-lg-12 loginbttm">
                                  <div class="col-lg-6 login-btm login-text">
                                      <!-- Error Message -->
                                  </div>
                                  <div class="col-lg-6 login-btm login-button">
                                      <input type="button" value="Register" id="btnRegister" />
                                  </div>
                              </div>
                          </form>
                      </div>
                  </div>
                  <div class="col-lg-3 col-md-2"></div>
              </div>
          </div>
      </div>
    </div><!--End_Login-->
    <!--Start-Chat-->
    <div id="chatForm">
      <div class="container">
        <!--Start_Header_Chat-->
        <div class="row">
          <div class="col-md-12">
            <div align="center"><h3>Username: </h3><h3 id="ten" style="color: blue;"></h3></div>
            <hr>
          </div>
        </div><!--End_Header_Chat-->

        <!--Start_Container_Chat-->
        <div class="row">
          <!--Start_ListUsers-->
          <div class="col-md-3 ">
            <div class="inbox_people">
              <div class="headind_srch">
                <div class="recent_heading">
                  <h5>Đang online</h5>
                </div>
                <div class="srch_bar">
                  <div class="stylish-input-group">
                    <input type="text" class="search-bar"  placeholder="Search" >
                    <span class="input-group-addon">
                    <button type="button"> <i class="fa fa-search" aria-hidden="true"></i> </button>
                    </span> </div>
                </div>
              </div>
              <div class="inbox_chat" id="users">

              </div>
            </div>
          </div><!--End_ListUsers-->
          <!--Start_ContentChat-->
          <div class="col-md-7">
            <div class="mesgs">
              <div class="msg_history" id="msg_history">

              </div>
              <div class="type_msg">
                <div class="input_msg_write">
                  <input type="text" class="" placeholder="Type a message" id="message"/>
                  <button class="msg_send_btn" type="button" id="btnSend"><i class="far fa-paper-plane"></i></button>
                  <input id="fileSelector" type="file">
                </div>
              </div>
            </div>
          </div><!--End_ContentChat-->
          
          <div class="col-md-2">
              <div class="panel panel-info ">
                <div class="panel-heading">
                  <h3 class="panel-title">Phòng</h3>
                  <ul id="rooms" class="list-group">

                  </ul>
                </div>
                <div class="panel-body tao-phong">
                    <label class="form-control-label">Tên phòng</label>
                  <div class="form-group">
                      <input type="text" class="form-control" id="roomName">
                      <input type="button" class="btn btn-primary" id="btnRoom" value="Tạo">
                  </div>

                </div>
              </div>
          </div><!--End_Rooms-->
        </div>
        <!--Start_Container_Chat-->
      </div>
    </div>
    <!--End-Chat-->
    <script src="/xuly.js"></script>
  </body>
</html>
